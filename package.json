{
  "name": "blockchain-record-keeping",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run build:circuits && next build",
    "start": "next start",
    "lint": "next lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:circuits": "cd circuits && ./compile.sh && ./setup.sh",
    "compile:circuits": "cd circuits && ./compile.sh",
    "setup:circuits": "cd circuits && ./setup.sh",
    "test:circuits": "cd circuits && ./test-circuit.sh",
    "generate:verifier": "snarkjs zkey export solidityverifier public/circuits/access-control_0001.zkey blockchain/contracts/verifier.sol",
    "generate:ptau": "cd circuits && npx snarkjs powersoftau new bn128 14 pot14_0000.ptau -v && npx snarkjs powersoftau contribute pot14_0000.ptau pot14_0001.ptau --name='First contribution' -v && npx snarkjs powersoftau prepare phase2 pot14_0001.ptau pot14_final.ptau -v",
    "clean:circuits": "rm -rf public/circuits circuits/*.zkey circuits/verification_key.json blockchain/contracts/verifier.sol"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@openzeppelin/contracts": "^5.3.0",
    "@radix-ui/react-slot": "^1.2.3",
    "circomlib": "^2.0.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ethers": "^6.14.4",
    "ffjavascript": "^0.3.1",
    "lucide-react": "^0.522.0",
    "next": "15.3.3",
    "postcss": "^8.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "snarkjs": "^0.7.5",
    "tailwind-merge": "^3.3.1",
    "web3modal": "^1.9.12"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@eslint/eslintrc": "^3",
    "@nomicfoundation/hardhat-ethers": "^3.0.9",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@storybook/addon-a11y": "^9.0.12",
    "@storybook/addon-docs": "^9.0.12",
    "@storybook/addon-vitest": "^9.0.12",
    "@storybook/nextjs-vite": "^9.0.12",
    "@tailwindcss/postcss": "^4.1.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^16.5.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-storybook": "^9.0.12",
    "hardhat": "^2.24.3",
    "jsdom": "^26.1.0",
    "playwright": "^1.53.0",
    "storybook": "^9.0.12",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
